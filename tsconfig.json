{
  "compilerOptions": {
    "target": "es5",
    "downlevelIteration": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2015.iterable",
      "es2016",
      "es2017",
      "es2017.object",
      "es2018"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "noEmit": true
  },
  "include": [
    "client/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
